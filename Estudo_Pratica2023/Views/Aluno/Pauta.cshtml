@model IEnumerable<Estudo_Pratica2023.Models.Aluno>

@{
    ViewData["Title"] = "Index";
}

<h1>Pauta</h1>

<p>
    <a asp-action="Adicionar" class="btn btn-primary">+</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pratica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teorica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Numero)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pratica)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teorica)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nota)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    <a asp-action="Alterar" asp-route-id="@item.Numero" class="btn btn-outline-primary">Alterar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
