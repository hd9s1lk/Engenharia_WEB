@model IEnumerable<PAPP1.Models.Carro>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ano)
                </td>
                <td>
                        <img src="~/Fotos/@item.Foto" height="20" width="100"></img>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vendido)
                </td>
                <td>
                    @if(item.Vendido == false)
                    {
                        <p>
                            <a asp-action="Comprar">Comprar</a>
                        </p>
                    }
                </td>

        </tr>
}
    </tbody>
</table>
