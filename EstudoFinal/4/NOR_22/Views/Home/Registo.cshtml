@model NOR_22.Models.Empresa

@{
    ViewData["Title"] = "Registo";
}

<h1>Registo de uma nova Empresa</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registo" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logotipo" class="control-label"></label>
                <input type="file" asp-for="Logotipo" class="form-control" />
                <span asp-validation-for="Logotipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Pais</label>
                <select asp-for="PaisID" class ="form-control" asp-items="ViewBag.Paises"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Registar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
