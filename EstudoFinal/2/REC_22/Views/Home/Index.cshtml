@model IEnumerable<REC_22.Models.EmpresaPaisViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Países Registados</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abreviatura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumEmpresas)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abreviatura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumEmpresas)
            </td>
            <td>|
                <a asp-action="MaisInfo" asp-route-id="@item.Id" class="btn btn-primary"> >> </a>
            </td>
        </tr>
}
    </tbody>
</table>
