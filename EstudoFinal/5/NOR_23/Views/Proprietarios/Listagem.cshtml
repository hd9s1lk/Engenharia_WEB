@model IEnumerable<NOR_23.Models.ProprietarioVeiculoViewModel>

@{
    ViewData["Title"] = "Listagem";
}


<table class="table">
    <thead>
        <tr>
            <th>
                <a href="/Proprietarios/Ordena" id="ordenar-nome-link">Nome</a>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidade)
            </th>
            <th>
                Veículos
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalidade)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumVeiculos)
                </td>
            <td>
                <a asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a>
                    <div id="tabela-proprietarios">
                        <table class="table">
                        </table>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#ordenar-nome-link').on('click', function (e) {
                e.preventDefault();
                $.get('/Proprietarios/Ordena', function (data) {
                    $('#tabela-proprietarios').html(data);
                });
            });
        });
    </script>
}
