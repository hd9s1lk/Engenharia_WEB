@model REC_24.Models.RegistoNota

@{
    ViewData["Title"] = "Inserir";
}

<h4>Registar Nota</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Inserir">
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger" role="alert">
                    Por favor, corrija os erros abaixo e tente novamente.
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumAluno" class="control-label"></label>
                <input asp-for="NumAluno" class="form-control" />
                <span asp-validation-for="NumAluno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nota" class="control-label"></label>
                <input asp-for="Nota" class="form-control" />
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Notas" class="btn btn-danger">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
