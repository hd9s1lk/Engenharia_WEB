@model IEnumerable<Pratica_2020_Turno2.Models.Carro>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Inserir">Inserir Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
            <td>
                <img src="~/Fotos/@item.Foto" width="100" height="60"></img>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendido)
            </td>
            <td>
                    @if (item.Vendido == false)
                    {
                        <a asp-action="Comprar" asp-route-id="@item.Id">Comprar</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
