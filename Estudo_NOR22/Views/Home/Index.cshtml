@model IEnumerable<Estudo_NOR22.Models.Empresa>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logotipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Logotipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais.Nome)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn-danger"> X </a>
            </td>
        </tr>
}

    </tbody>
</table>

<h5><a asp-action="Registo" class="btn btn-primary"> + </a></h5>