@model Final_NOR24.Models.RegistoUtilizador

@{
    ViewData["Title"] = "Adiciona";
}

<h1>Adiciona</h1>

<h4>RegistoUtilizador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Adiciona">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <label>Regime</label>
            <br></br>
            <select>
                <option value="Ordinario">Ordinario</option>
                <option value="Super">Super</option>
                <option value="Especial">Especial</option>
            </select>
            <div class="form-group">
                <input type="submit" value="Adiciona" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Cancela</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
